{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "es2024",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*.ts"],
  "references": [
    { "path": "../../libs/types" },
    { "path": "../../libs/sparques-canvas" }
  ]
}
